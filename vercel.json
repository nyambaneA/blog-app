{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js", "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"] },
    { "src": "/(.*)", "dest": "backend/server.js" }
  ]
}